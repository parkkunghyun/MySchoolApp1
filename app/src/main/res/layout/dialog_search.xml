<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp">

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:id="@+id/year"
            android:textSize="20dp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="년도"></TextView>
        <Spinner
            android:id="@+id/year_spinner"
            android:entries="@array/spinner_year_array"
            android:textSize="20dp"
            android:layout_width="170dp"
            android:layout_height="wrap_content"></Spinner>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:id="@+id/isExport"
            android:textSize="20dp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="수출입"></TextView>
        <Spinner
            android:id="@+id/isExport_spinner"
            android:entries="@array/spinner_isExport_array"
            android:textSize="20dp"
            android:layout_width="170dp"
            android:layout_height="wrap_content"></Spinner>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:id="@+id/category"
            android:textSize="20dp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="작물분류"></TextView>
        <Spinner
            android:id="@+id/category_spinner"
            android:entries="@array/spinner_category_array"
            android:textSize="20dp"
            android:layout_width="170dp"
            android:layout_height="wrap_content"></Spinner>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:id="@+id/name"
            android:textSize="20dp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="품목"></TextView>
        <EditText
            android:id="@+id/name_edit"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="전체"></EditText>
    </LinearLayout>

    <View
        android:id="@+id/line"
        android:layout_width="390dp"
        android:layout_height="2dp"
        android:layout_marginTop="100dp"
        android:background="#aeaeae"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>